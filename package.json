{
  "name": "leap",
  "version": "1.0.0",
  "description": "Ultraleap Trackpad / Gesture Engine",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "electron-builder",
    "middleware:build": "cmake -S cmiddleware -B cmiddleware/build -DULTRALEAP_SDK='/Applications/Ultraleap Hand Tracking.app/Contents/LeapSDK' && cmake --build cmiddleware/build -j",
    "middleware:start": "cmiddleware/build/ultraleap_middleware",
    "dev": "concurrently -k -s first -n MIDDLEWARE,APP \"npm:middleware:start\" \"USE_LEAPC_BRIDGE=1 electron .\""
  },
  "author": "WCV",
  "license": "ISC",
  "dependencies": {
    "@hurdlegroup/robotjs": "^0.12.3",
    "electron": "29.4.0",
    "leapjs": "^0.6.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "concurrently": "^9"
  },
  "build": {
    "appId": "com.wcv.leap",
    "productName": "Leap Trackpad",
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    }
  },
  "overrides": {
    "node-abi": "^3.63.0"
  }
}
